<navbar backHome="{{true}}" bgColor="{{bgColor}}" title="经纪人认证" />
<view class="view" style="padding-top:{{paddingTop}}px">
	<view class="top">
		<image class="top-image" src="/combination/image/bg_waiting_yellow_h76@2x.png"></image>
		<view class="top-view">
			<van-icon class="top-view-image" name="{{icon}}" size="56rpx" />
			<view class="top-view-row">
				<text class="top-view-titer">审核中，请耐心等候</text>
				<text class="top-view-text">驳回理由驳回理由驳</text>
			</view>
		</view>
	</view>
	<view class="view-row">
		<view class="view-row-content" bindtap="showPopup">
			<text class="view-row-content-name">选择机构</text>
			<view class="view-row-content-input">
				<input class="view-row-content-input-text" disabled type='text' name='mechanism' data-model="mechanism" placeholder="选择您所在的机构"></input>
				<van-icon style="margin-left:10rpx" name="arrow" color="#cccccc" size="18px" />
			</view>
		</view>
		<view class="view-row-content">
			<text class="view-row-content-name">姓名</text>
			<view class="view-row-content-input">
				<input class="view-row-content-input-text" bindinput='getInputValue' type='text' name='name' data-model="name" placeholder="请输入真实姓名"></input>
			</view>
		</view>
		<view class="view-row-content">
			<text class="view-row-content-name">工号</text>
			<view class="view-row-content-input">
				<input class="view-row-content-input-text" bindinput='getInputValue' type='text' name='jobNumber' data-model="jobNumber" placeholder="请输入工号"></input>
			</view>
		</view>
		<view class="view-row-content">
			<text class="view-row-content-name">手机号</text>
			<view class="view-row-content-input">
				<input class="view-row-content-input-text" bindinput='getInputValue' type='text' name='phone' data-model="phone" maxlength="11" placeholder="请输入手机号"></input>
			</view>
		</view>
		<!-- <view class="view-row-content">
			<text class="view-row-content-name">短信验证码</text>
			<view class="view-row-content-input">
				<input class="view-row-content-input-text" bindinput='getInputValue' type='text' name='code' data-model="code" maxlength="6" placeholder="请输入验证码"></input>
				<text class="view-row-content-input-set"></text>
				<text class="view-row-content-input-code" bindtap="getCode">{{code_msg}}</text>
			</view>
		</view> -->
		<view class="view-row-footer">
			<text class="view-row-content-name">工牌照片</text>
			<view class="uploader">
				<image src="https://img.yzcdn.cn/vant/cat.jpeg"></image>
				<!-- <uploader></uploader> -->
			</view>
		</view>
	</view>
</view>
<view class="submit">
	<!-- <text class="submit-title">提交审核</text> -->
	<text class="submit-title submitAction">去修改</text>
</view>

<van-popup show="{{ show }}" position="bottom" closeable close-icon="close" round custom-style="height: 600rpx;" bind:close="onClose"></van-popup>