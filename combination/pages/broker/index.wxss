/* combination/pages/broker/index.wxss */
.view {
	width: 100%;
	background-color: white;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.top {
	width: 100%;
	height: 200rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
	position: relative;
}

.top-image {
	width: 686rpx;
	height: 152rpx;
	display: block;
}

.top-view {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

.top-view-image {
	width: 56rpx;
	height: 56rpx;
	display: block;
	margin-left: 88rpx;
	margin-right: 24rpx;
}

.top-view-row{
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: column;
}

.top-view-titer {
	width: 100%;
	height: 44rpx;
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	text-align: left;
}

.top-view-text{
	width: 100%;
	height: 44rpx;
	font-size: 28rpx;
	font-weight: 500;
	color: #333333;
	text-align: left;
}

.view-row {
	width: 100%;
	height: auto;
	padding: 0 0 0 32rpx;
	box-sizing: border-box;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.view-row-content {
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-direction: row;
	border-bottom: 1rpx solid #eeeeee;
}

.view-row-content-name {
	width: auto;
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	color: #666666;
	font-size: 30rpx;
}

.view-row-content-input {
	flex: 1;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	font-size: 30rpx;
	font-weight: 400;
	color: #333333;
	padding: 0 32rpx;
}

.view-row-content-input-text {
	flex: 1;
	height: 100%;
	font-size: 30rpx;
	text-align: right;
	font-size: 30rpx;
	font-weight: 400;
	color: #333333;
}

.view-row-content-input-set {
	width: 4rpx;
	height: 36rpx;
	background-color: #EEEEEE;
	margin: 0 14rpx
}

.view-row-content-input-code {
	width: auto;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 30rpx;
	font-weight: 400;
	color: #4077FF;
}


.view-row-footer {
	width: 100%;
	height: auto;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.uploader {
	width: 200rpx;
	height: 200rpx;
}

.uploader image{
	width: 100%;
	height: 100%;
	display: block;
}

.submit {
	width: 100%;
	height: 180rpx;
	background-color: white;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	border-top: 1rpx solid #eeeeee;
}

.submit-title {
	width: 100%;
	height: 88rpx;
	box-sizing: border-box;
	background-color: #DADDE3;
	font-size: 32rpx;
	font-weight: bold;
	color: #FFFFFF;
	border-radius: 40rpx;
	margin: 24rpx 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.submitAction {
	color: #333333;
	font-weight: bold;
	background-color: #FFD854;
}