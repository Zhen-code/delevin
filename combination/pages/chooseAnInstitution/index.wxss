/* combination/pages/chooseAnInstitution/index.wxss */
.view {
	width: 100%;
	background-color: white;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.view-search{
	width: 100%;
	height: 80rpx;
	display: block;
}

.view-list{
	width: 100%;
	padding:0 32rpx;
	display: flex;
	align-items: flex-start;
	justify-content: center;
	flex-direction: column;
	box-sizing: border-box;
}

.view-row{
	width: 100%;
	height: 132rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	border-bottom: 1rpx solid #eeeeee;
}

.view-row-name{
	width: 100%;
	text-align: left;
	font-size: 30rpx;
	color: #333333;
	font-weight: bold;
}

.view-row-address{
	width: 100%;
	text-align: left;
	font-size: 28rpx;
	color: #333333;
	font-weight: 400;
}