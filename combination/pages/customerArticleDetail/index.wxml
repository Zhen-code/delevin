<navbar backHome="{{backHome}}" pageHome="{{pageHome}}" bgColor="{{bgColor}}" title="获客文章资讯" />
<scroll-view scroll-y class="scrollWrap">
  
	<view class="content" id="content" style="padding-top:{{paddingTop}}px">
	  <info  info="{{info}}" state="{{state}}"> </info>
		<view class="content-top">
			<view class="title">{{title}}</view>
			<view class="second-bar">
				<view class="second-bar-left">{{author}}</view>
				<view>{{time}}</view>
			</view>
		</view>
		<view class="content-center">
			<rich-text nodes="{{nodes}}" type="text"></rich-text>
		</view>
	</view>
	<view class="line"></view>
</scroll-view>
<view class="bottom-contain" style="bottom:{{safeBottom}}rpx;">
	<view class="bottom-text share-cycle">
		<button class="share-btn  " bindtap="goCode"></button>
		转发朋友圈
	</view>
	<view class="bottom-text">
		<button class="share-btn" open-type="share"></button>
		一键分享
	</view>
</view>