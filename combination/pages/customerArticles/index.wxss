/* combination/pages/customerArticles/index.wxss */
.view {
	width: 100%;
	background-color: white;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.scrollTab {
	width: 686rpx;
	height: 88rpx;
	margin: 0 20rpx;
	border: 1px solid #FFF;
	z-index: 2000;
}

.tabActiveStyle {
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #333333;
}

.aspectItem {
	width: 100%;
	height: auto;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
	padding: 0 32rpx;
	box-sizing: border-box;
}

.home-bottom {
	width: 100%;
	height: 88rpx;
	background: white;
}

.home-bottom text {
	flex: 1;
	height: 100%;
	font-size: 26rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	text-align: center;
	line-height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.tab {
	width: 100%;
	list-style-type: none;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-flex-wrap: nowrap;
	-ms-flex-wrap: nowrap;
	flex-wrap: nowrap;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	-ms-flex-pack: justify;
	justify-content: space-between;
	padding: 0;
	overflow: auto;
	border-bottom: 1rpx solid #eeeeee;
}

.tab-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1 0 auto;
	-ms-flex: 1 0 auto;
	flex: 1 0 auto;
	font-size: 28rpx;
	font-weight: 500;
	color: #333333;
	width: 120rpx;
	height: 88rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.action {
	font-weight: bold;
	position: relative;
}

.action::before {
	content: '';
	position: absolute;
	left: 50%;
	bottom: 0;
	transform: translate(-50%,-50%);
	width: 44rpx;
	height: 8rpx;
	background: #FFD854;
	border-radius: 4rpx;
}

.tabItem{
	width: 100%;
	height: 88rpx;
}