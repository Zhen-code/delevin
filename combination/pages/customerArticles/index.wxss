/* combination/pages/customerArticles/index.wxss */
.view {
	width: 100%;
	background-color: white;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.scrollTab {
	width: 686rpx;
	height: 88rpx;
	margin:0 20rpx;
	border: 1px solid #FFF;
	z-index: 2000;
}

.tabActiveStyle {
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #333333;
}

.aspectItem{
	width: 100%;
	height: auto;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
	padding: 0 32rpx;
	box-sizing: border-box;
}

.home-bottom {
	width: 100%;
	height: 88rpx;
	background: white;
}

.home-bottom text {
	flex: 1;
	height: 100%;
	font-size: 26rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	text-align: center;
	line-height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}