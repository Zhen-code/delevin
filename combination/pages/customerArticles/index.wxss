.container {
	width: 100%;
	background: #FFF;
	box-sizing: border-box;
}

.nav {
	width: auto;
	height: auto;
}

.tabbar {
	width: 686rpx;
	height: 68rpx;
	margin: 34rpx auto 0 auto;
	border: 2rpx solid #EEEEEE;
	border-radius: 0px 8rpx 8rpx 0px;
	display: flex;
	flex-direction: row;
}

.tabContent {
	width: 100%;
	height: 100%;
	padding: 0 32rpx;
	box-sizing: border-box;
}

.van-hairline--top-bottom::after {
	border-top: none !important;
}


.van-tabs__line {
	position: absolute;
	bottom: -4rpx !important;
	/*left: 6% !important;*/
	z-index: 1;
	width: 44rpx !important;
	height: 3rpx;
	border-radius: 3px;
	background-color: #FFD854 !important;
}

.tabContent {
	width: 100%;
	height: 100%;
}

.tab-item {
	box-sizing: border-box;
	height: 244rpx;
	width: 100%;
	border-bottom: 1px solid #EEEEEE;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}

.tab-item-left {
	width: 422rpx;
	height: 178rpx;
	margin-right: 24rpx;
}

.tab-item-left-title {
	font-size: 30rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #333333;
	margin-bottom: 18rpx;
	height: 82rpx;
	width: 422rpx;
	overflow: hidden;
	display: -webkit-box;
	text-overflow: ellipsis;
	-webkit-line-clamp:2;
	line-clamp: 2;
	-webkit-box-orient: vertical;
}

.tab-item-left-desc {
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #999999;
	margin-bottom: 4rpx;
	width: 422rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.tab-item-left-time {
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #999999;
}

.tab-item-right {
	width: 240rpx;
	height: 180rpx;
	border-radius: 4rpx;
	background: #999999;
}

.split-line {
	margin: 0 8rpx;
}

.tab-item2 {
	min-height: 210rpx;
	margin: 0 32rpx 0rpx 32rpx;
	border-bottom: 1px solid #EEEEEE;
	padding: 32rpx 0;
}

.tab-item2-title {
	font-size: 30rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #333333;
}

.tab-item2-desc {
	width: 686rpx;
	height: 40rpx;
	font-size: 28rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #666666;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	margin: 8rpx 0 28rpx 0;
}

.tab-item2-label {
	width: 310rpx;
	min-height: 44rpx;
	background: #E8EFFF;
	border-radius: 4px;
	padding: 4rpx 12rpx;
	box-sizing: border-box;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #4077FF;
	margin-bottom: 16rpx;
}

.tab-item2-time {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #999999;
}

.tab-item2-time-left {
	display: flex;
}

.tab-item2-time-center {
	display: flex;
	margin: 0 24rpx 0 74rpx;
}

.tab-item2-time-right {
	display: flex;
}

.postImg {
	width: 32rpx;
	height: 32rpx;
	margin-right: 8rpx;
}

.bottom-text {
	margin: 25rpx auto;
	text-align: center;
	font-size: 26rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	font-weight: 400;
	color: #999999;
}

.view-list{
	width: 100%;
	height: 100%;
}
.message-view{
	width: 100%;
	height: 80vh;
	box-sizing: border-box;
}
.noRefresh{
	display: none;
}
.refresh{
	display: flex;
	justify-content: center;
	align-items: center;
	width: 100%;
}
.noData{
	z-index: 5000;
	position: fixed;
	bottom: 0;
}
.hideShow{
	display: none;
}
.scrollView{
	width: 100%;
	height: 88rpx;
	white-space: nowrap;
	overflow-x: auto;
}
.scrollView view{
	display: inline-block;
	margin-right: 64rpx;
	width: 74rpx;
	height: 88rpx;
	line-height: 88rpx;
	text-align: center;
	font-size: 28rpx;
	font-family: PingFangSC-Regular, PingFang SC;
	color: #999999;
}
.isActive{
	font-size: 28rpx;
	font-family: PingFangSC-Medium, PingFang SC;
	color: #333333!important;
	width: 44px;
	height: 8px;
	font-weight: bold;
	position: relative;
}
.isActive::before{
	content: '';
	width: 44rpx;
	height: 8rpx;
	background: #FFD854;
	border-radius: 4rpx;
	top: 70rpx;
	left: 14rpx;
	position: absolute;
}
