<navbar backHome="{{true}}" bgColor="{{bgColor}}" title="客源管理" />
<view class="view" style="padding-top:{{paddingTop}}px">
	<view class="doubleTab">
		<doubleTab style="width:100%;height:70rpx;" tabItem="{{tabItem}}" bind:backTabValue="getTabValue"></doubleTab>
	</view>
	<scroll-view class="shopItem" style="top: {{paddingTop+45}}px;" refresher-enabled="true" scroll-into-view="{{toView}}" refresher-triggered="{{triggered}}" bindrefresherrefresh="topList" bindscrolltolower="scrollList" scroll-y="true">
		<block wx:for="{{item}}" wx:key="index" wx:if="{{tabIndex === 0}}">
			<shopItem></shopItem>
		</block>
		<block wx:for="{{item}}" wx:key="index" wx:if="{{tabIndex === 1}}">
			<view class="row">
				<view class="row-left">
					<image class="row-left-image" src="https://img.yzcdn.cn/vant/cat.jpeg"></image>
					<view class="row-left-type">
						<text class="row-left-type-name">鱼仁之</text>
						<view class="row-left-type-degree">匹配度 20%
							<text class="row-left-type-check">查看最匹配房源</text>
						</view>
					</view>
				</view>
				<view class="row-right" bindtap="dialNumber">
					<image class="row-right-image" src="/combination/image/icon_phonecall_30@2x.png"></image>
					<text class="row-right-phone">虚拟号码</text>
				</view>
			</view>
		</block>
		<block wx:for="{{item}}" wx:key="index" wx:if="{{tabIndex === 2}}">
			<view class="row">
				<view class="row-left">
					<image class="row-left-image" src="https://img.yzcdn.cn/vant/cat.jpeg"></image>
					<view class="row-left-type">
						<text class="row-left-type-name">鱼仁之</text>
						<view class="row-left-type-degree">匹配度 20%</view>
					</view>
				</view>
				<view class="row-right" bindtap="confirm">
					<van-tag size="large" color="#FFC51D" text-color="#333333" type="warning">待抢</van-tag>
					<!-- <van-tag size="large" color="#EEEEEE" text-color="#333333" type="warning">已抢</van-tag> -->
				</view>
			</view>
		</block>
		<block wx:for="{{item}}" wx:key="index" wx:if="{{tabIndex === 3}}">
			<view class="row">
				<view class="row-left">
					<image class="row-left-image" src="https://img.yzcdn.cn/vant/cat.jpeg"></image>
					<view class="row-left-type">
						<text class="row-left-type-name">鱼仁之</text>
						<view class="row-left-type-degree">匹配度 20%
							<text class="row-left-type-check">查看最匹配房源</text>
						</view>
					</view>
				</view>
				<view class="row-right" bindtap="dialNumber">
					<image class="row-right-image" src="/combination/image/icon_phonecall_30@2x.png"></image>
					<text class="row-right-phone">虚拟号码</text>
				</view>
			</view>
		</block>
		<view class="footer">
			<text class="footer-text">- 到底啦 -</text>
		</view>
	</scroll-view>
</view>