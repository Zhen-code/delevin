<navbar backHome="{{true}}" bgColor="{{bgColor}}" title="客源管理" />
<view class="view" style="padding-top:{{paddingTop}}px">
	<view class="doubleTab">
		<doubleTab style="width:100%;height:70rpx;" tabIndex="{{0}}" tabItem="{{tabItem}}" bind:backTabValue="getTabValue"></doubleTab>
	</view>
	<scroll-view class="shopItem" wx:if="{{selectType.length !== 0}}" style="top: {{paddingTop+45}}px;" refresher-enabled="true" scroll-into-view="{{toView}}" refresher-triggered="{{triggered}}" bindrefresherrefresh="topList" bindscrolltolower="scrollList" scroll-y="true">
		<block wx:for="{{item}}" wx:key="index" wx:if="{{tabIndex === 0}}">
			<shopItem item="{{item}}"></shopItem>
		</block>
		<block wx:for="{{pushCustomer}}" wx:key="index" wx:if="{{tabIndex === 1}}">
			<view class="row">
				<view class="row-left">
					<image class="row-left-image" src="{{item.headImgUri}}"></image>
					<view class="row-left-type">
						<text class="row-left-type-name">{{item.nickname}}</text>
						<view class="row-left-type-degree">匹配度 {{item.matchValue}}%
							<text class="row-left-type-check" data-id="{{item.houseId}}" data-housetype="{{item.houseType}}" catch:tap="goHouseDetail">查看最匹配房源</text>
						</view>
					</view>
				</view>
				<view class="row-right" bindtap="dialNumber">
					<image class="row-right-image" src="/combination/image/icon_phonecall_30@2x.png"></image>
					<text class="row-right-phone">{{item.phone}}</text>
				</view>
			</view>
		</block>
		<block wx:for="{{watiCustomerList}}" wx:key="index" wx:if="{{tabIndex === 2}}">
			<view class="row">
				<view class="row-left">
					<image class="row-left-image" src="{{item.headImgUri}}"></image>
					<view class="row-left-type">
						<text class="row-left-type-name">{{item.nickname}}</text>
						<view class="row-left-type-degree">匹配度 {{item.matchValue}}%</view>
					</view>
				</view>
				<view class="row-right" bindtap="confirm">
					<van-tag wx:if="{{item.snatch=='YES'}}" data-memberid="{{item.id}}" size="large" color="#FFC51D" text-color="#333333" type="warning" catch:tap="getCustomer">待抢</van-tag>
					 <van-tag wx:else size="large" color="#EEEEEE" text-color="#333333" type="warning">不可抢</van-tag>
				</view>
			</view>
		</block>
		<block wx:for="{{snatchList}}" wx:key="index" wx:if="{{tabIndex === 3}}">
			<view class="row">
				<view class="row-left">
					<image class="row-left-image" src="{{item.headImgUri}}"></image>
					<view class="row-left-type">
						<text class="row-left-type-name">{{item.nickname}}</text>
						<view class="row-left-type-degree">匹配度 {{item.matchValue}}%
							<text class="row-left-type-check" data-id="{{item.houseId}}"  data-housetype="{{item.houseType}}" catch:tap="goHouseDetail">查看最匹配房源</text>
						</view>
					</view>
				</view>
				<view class="row-right" bindtap="dialNumber">
					<image class="row-right-image" src="/combination/image/icon_phonecall_30@2x.png"></image>
					<text class="row-right-phone">{{item.phone}}</text>
				</view>
			</view>
		</block>
		<view class="footer">
			<text class="footer-text">- 到底啦 -</text>
		</view>
	</scroll-view>
	<noData wx:if="{{selectType.length === 0}}" height="{{100}}"></noData>
</view>
