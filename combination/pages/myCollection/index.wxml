<!--combination/pages/myCollection/index.wxml-->
<navbar backHome="{{true}}" bgColor="{{bgColor}}" title="我的收藏" />
<view class="view" style="padding-top:{{paddingTop}}px">
	<view class="top">
		<text class="top-tab {{topTabIndex === 0?'top-tab-action':''}}" data-index="{{0}}" bindtap="topTap">房源</text>
		<text class="top-tab {{topTabIndex === 1?'top-tab-action':''}}" data-index="{{1}}" bindtap="topTap">其他</text>
	</view>
	<view class="doubleTab">
		<doubleTab wx:if="{{topTabIndex === 0}}" style="width:100%;height:70rpx;" bind:backTabValue="getTabIndex" tabItem="{{tabItem}}"></doubleTab>
		<view class="tab" wx:if="{{topTabIndex === 1}}">
			<text class="tabState {{tabIndex === 0?'tabAction':''}}" data-index="{{0}}" bindtap="tabItemIndex">新闻</text>
			<text class="tabState {{tabIndex === 1?'tabAction':''}}" data-index="{{1}}" bindtap="tabItemIndex">地产315</text>
		</view>
	</view>
	<scroll-view wx:if="{{item.length !== 0}}" class="shopItem" style="top: {{paddingTop+44+61}}px;" refresher-enabled="true" scroll-into-view="{{toView}}" refresher-triggered="{{triggered}}" bindrefresherrefresh="topList" bindscrolltolower="scrollList" scroll-y="true">
		<block wx:for="{{item}}" wx:key="index">
			<van-swipe-cell right-width="{{ 80 }}" id="swipe-cell" async-close data-item="{{item}}" data-index="{{index}}" bind:close="onClose">
				<van-cell-group>
					<shopItem item="{{item}}" wx:if="{{topTabIndex === 0}}"></shopItem>
					<aspectItem item="{{item}}" wx:if="{{topTabIndex === 1 && tabIndex === 0}}"></aspectItem>
					<estateItem item="{{item}}" wx:if="{{topTabIndex === 1 && tabIndex === 1}}"></estateItem>
				</van-cell-group>
				<view slot="right">{{favorites}}</view>
			</van-swipe-cell>
		</block>
		<view class="footer">
			<text class="footer-text">- 到底啦 -</text>
		</view>
	</scroll-view>
</view>

<noData wx:if="{{item.length === 0}}" height="{{100}}"></noData>