/* combination/pages/myCollection/index.wxss */
.view {
	width: 100%;
	background-color: white;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.top {
	width: 100%;
	height: auto;
	padding: 32rpx 32rpx 16rpx 32rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.top-tab {
	width: 344rpx;
	height: 34px;
	background: #F8F8F8;
	border-radius: 0px 4px 4px 0px;
	border: 1px solid #EEEEEE;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	font-weight: 400;
	color: #999999;
}

.top-tab-action {
	width: 344rpx;
	height: 34px;
	font-size: 28rpx;
	font-weight: bold;
	color: #333333;
	background: #FFD854;
	border-radius: 4px 0px 0px 4px;
}

.doubleTab {
	width: 100%;
	height: 90rpx;
	border-bottom: 1rpx solid #eeeeee;
	padding: 0 32rpx;
	box-sizing: border-box;
}

.shopItem {
	width: 100%;
	height: 100%;
	overflow: scroll;
	padding: 0 32rpx;
	box-sizing: border-box;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
	position: fixed;
	left: 0;
}

.shopItem-list {
	width: 100%;
	height: auto;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.footer {
	width: 100%;
	height: 40px;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 194px;
}

.footer-text {
	width: 100%;
	text-align: center;
	font-size: 26rpx;
	font-weight: 400;
	color: #999999;
}

.van-cell-group-right{
	width: 100%;
	height: 100%;
}

/* components/doubleTab/index.wxss */
.tab {
	flex: 1;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.tabState {
	flex: 1;
	height: 80%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #999999;
	/* margin-right: 56rpx; */
}

.tabState:last-child{
	margin-right: 0;
}

.tabAction {
	position: relative;
	color: #333333;
	font-weight: bold;
}

.tabAction::before {
	content: "";
	width: 35rpx;
	height: 6rpx;
	background: rgba(255, 210, 0, 1);
	border-radius: 2px;
	position: absolute;
	bottom: -8rpx;
	left: 50%;
	transform: translate(-50%, -50%);
}