<navbar backHome="{{true}}" bgColor="{{bgColor}}" title="我的套餐" />
<view class="view" style="padding-top:{{paddingTop}}px;height: calc(100vh - {{paddingTop}}px);">
	<view class="doubleTab">
		<doubleTab style="width:100%;height:70rpx;" tabItem="{{tabItem}}" bind:backTabValue="getbackTabIndex"></doubleTab>
	</view>
	<scroll-view class="shopItem" refresher-enabled="true" scroll-into-view="{{toView}}" refresher-triggered="{{triggered}}" bindrefresherrefresh="topList" bindscrolltolower="scrollList" scroll-y="true">
		<block wx:for="{{item}}" wx:key="index">
			<view class="row">
				<view class="typeImage">
					<image class="image" src="/combination/image/pic_valid_75_yellow@2x.png"></image>
					<!-- <image class="image" src="/combination/image/pic_invalid_75_grey@2x.png"></image> -->
				</view>
				<view class="row-item">
					<text class="row-item-key">订单编号</text>
					<text class="row-item-value">298753745</text>
				</view>
				<view class="row-item">
					<text class="row-item-key">创建时间</text>
					<text class="row-item-value">2020-08-23 12:32</text>
				</view>
				<view class="row-item">
					<text class="row-item-key">套餐规格</text>
					<text class="row-item-value" wx:if="{{index}}">{{index}}3个月</text>
					<text class="row-item-value" wx:if="{{index == 1}}">100次</text>
					<text class="row-item-value" wx:if="{{index == 2}}">1000曝光/天</text>
				</view>
				<view class="row-item"  wx:if="{{index == 1}}">
					<text class="row-item-key">套餐余额</text>
					<text class="row-item-value">56人次（当前可用抢客次数）</text>
				</view>
				<view class="row-item"  wx:if="{{index == 3}}">
					<text class="row-item-key">购买数量</text>
					<text class="row-item-value">5天</text>
				</view>
				<view class="row-item" wx:if="{{index == 0 || index == 3}}">
					<text class="row-item-key">套餐有效期</text>
					<text class="row-item-value">2020-08-23 12:32至2020-08-23 12:32</text>
				</view>
			</view>
		</block>
	</scroll-view>
</view>