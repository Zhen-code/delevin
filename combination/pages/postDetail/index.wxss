/* combination/pages/postDetail/index.wxss */
.content{
  background: #FFFFFF;
  padding: 40rpx 32rpx 48rpx 32rpx;
  box-sizing: border-box;
  width: 100%;
}
.content-top{
  height: auto;
  width: 100%;
  border-bottom: 1px solid #EEEEEE;
  overflow: hidden;
}
.title{
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-top: 39rpx;
}
.second-bar{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  margin-top: 24rpx;
  padding-bottom: 24rpx;
}
.second-bar-left{
  margin-right: 40rpx;
}
.content-center{
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.news-img{
  border-radius: 4rpx;
  margin-top: 24rpx;
  margin-bottom: 48rpx;
}
.line{
  width: 750rpx;
  height: 20rpx;
  background: #F8F8F8;
}
.comment-wrapper{
  padding: 0 32rpx;
  box-sizing:border-box;
  overflow: hidden;
}
.comment-title{
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  margin: 32rpx 0 24rpx 0;
  display: block;
}
.comment-content{
  width: 100%;
  height: auto;
}
.comment-item{
  padding: 32rpx 0;
  border-top: 1px solid #EEEEEE;
  overflow: hidden;
}
.comment-item-title{
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.comment-item-time{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  margin: 16rpx 0 24rpx 0;
}
.comment-item-time-left{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}
.comment-item-time-right{
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #4077FF;
}
.second-comment{
  height: auto;
  width: 100%;
  padding: 24rpx 24rpx 24rpx 24rpx;
  background: #F8F8F8;
  box-sizing: border-box;
}
.second-comment-item{
  width: 100%;
  height: auto;
  padding-top: 24rpx;
}
.second-comment-item-title{
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.second-comment-item-response{
  display: flex;
  flex-direction: row;
  margin: 8rpx 0;
  align-items: center;
}
.response1{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  margin-right: 8rpx;
}
.response{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  margin-right: 8rpx;
}
.response2{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  margin-right: 8rpx;
}
.response-time{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
}
.response-btn{
  font-size: 26rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #4077FF;
  margin-bottom: 16rpx;
  width: 100%;
  text-align: right;
}
.hasline{
  border-bottom: 1px solid #EEE;
  padding-bottom: 10rpx;
}
.more-comment{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 19rpx;
}
.more-text{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #4077FF;
}
.goBlue{
  width: 40rpx;
  height: 40rpx;
}
.no-more-text{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  width: 750rpx;
  height: 87rpx;
  background: #F8F8F8;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 130rpx;
}
.bottom-contain{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 18rpx 10rpx 18rpx 32rpx;
  box-sizing:border-box;
  width: 100%;
  height: 112rpx;
  background: #FFF;
}
.bottom-contain-ios{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 18rpx 10rpx 34rpx 32rpx;
  box-sizing:border-box;
  width: 100%;
  height: 128rpx;
  background: #FFF;
}
.write-content{
  width: 376rpx;
  height: 64rpx;
  background: #F8F8F8;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  padding-left: 32rpx;
  box-sizing:border-box;
}
.write-content-btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 !important;
  margin: 0 !important;
  width: auto !important;
  border: 1px solid #FFF !important;
  background: transparent !important;
}

.write-content-btn text{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.bottom-img{
  height: 40rpx;
  width: 40rpx;
}
.second-comment-items{
  padding: 6rpx;
}
.fixText{
  position: fixed;
  left: 0;
  bottom: 160rpx;
  width: 100%;
  /* display: block; */
  min-height: 180rpx;
  background: #FFF;
  box-sizing:border-box;
  padding: 20rpx;
  line-height: 40rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start
}
.placeholder-style{
  color: #999999;
}
