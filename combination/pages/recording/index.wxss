/* combination/pages/recording/index.wxss */
.view {
	width: 100%;
	height: 100%;
	background-color: white;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.shopItem {
	width: 100%;
	height: 100%;
	overflow: scroll;
	padding: 0 32rpx;
	box-sizing: border-box;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
	position: fixed;
	left: 0;
}

.shopItem-list {
	width: 100%;
	height: auto;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: column;
}

.row {
	width: 100%;
	height: 150rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-direction: row;
	border-bottom: 1rpx solid #eeeeee;
}

.row-left {
	flex: 1;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
}

.row-left-image {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 24rpx;
}

.row-left-type {
	width: auto;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}

.row-left-type-name {
	width: 100%;
	height: 42rpx;
	font-size: 30rpx;
	font-weight: bold;
	color: #333333;
	line-height: 42rpx;
	text-align: left;
}

.row-left-type-phone {
	width: 100%;
	height: 36rpx;
	font-size: 26rpx;
	font-weight: 400;
	color: #999999;
	line-height: 36rpx;
	text-align: left;
}

.row-right {
	width: auto;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: flex-end;
	flex-direction: row;
}

.row-right-image {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
}

.row-right-phone {
	height: 28rpx;
	font-size: 20rpx;
	font-weight: 400;
	color: #999999;
	line-height: 28rpx;
	margin-left: 8rpx;
}

.footer {
	width: 100%;
	height: 40px;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 90px;
}

.footer-text {
	width: 100%;
	text-align: center;
	font-size: 26rpx;
	font-weight: 400;
	color: #999999;
}