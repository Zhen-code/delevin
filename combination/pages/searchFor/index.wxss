.view {
	width: 100%;
	height: 100%;
}

.view-content {
	width: 100%;
	height: auto;
	box-sizing: border-box;
	padding: 0 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	margin-top: 48rpx;
}

.view-content-top {
	width: 100%;
	height: 64rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-direction: row;
}

.view-content-title {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	text-align: left;
	font-size: 32rpx;
	color: #333333;
	font-weight: bold;
}

.view-content-delete {
	width: 80px;
	height: 24px;
	border-radius: 12px;
	border: 1px solid rgba(199, 199, 199, 1);
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.view-content-image {
	width: 32rpx;
	height: 32rpx;
	margin-right: 8rpx;
}

.view-content-text {
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
}

.view-content-content {
	width: 100%;
	height: auto;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	flex-direction: row;
	flex-wrap: wrap;
	margin-top: 20rpx;
}

.view-content-content-history {
	width: auto;
	height: 55rpx;
	background: #F8F8F8;
	border-radius: 28px;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	padding: 0 30rpx;
	color: #666666;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
}

.view-content-content-popular {
	width: auto;
	height: 55rpx;
	border-radius: 28px;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	padding: 0 30rpx;
	color: #333333;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
	border-radius: 17px;
	border: 1px solid rgba(51, 51, 51, 1);
}