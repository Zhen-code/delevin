.container-main {
    width:100%;
    padding: 32rpx;
    box-sizing: border-box;
    height: auto;
}

.point-img {
    width:100%;height:auto;
}
.bjt {
    width:686rpx;
    height:1066rpx;
}

.point-container {
    padding:32rpx;
    box-sizing:border-box;
    width: 686rpx;
    height: 242rpx;
    display: flex;
    justify-content: space-between;
    }

.point-container text {font-weight:bold;}
.point-container .am-cname {
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
    margin-bottom: 8rpx;
}
.contact{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.contact image{
    width: 36rpx;
    height: 36rpx;
}
.contact text{
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
}
.desc{
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #999999;
    margin-top: 16rpx;
}

.am-img {
    width: 136rpx;
    height: 136rpx;
}
.am-img image {
    width: 136rpx;
    height: 136rpx;
}


.am-footer {
    display:flex;
    width: 100%;
    height: 162rpx;
    align-items: center;
    justify-content: center;
}
.share-button{
    width: 600rpx;
    height: 88rpx;
    background: #FFD854;
    border-radius: 44rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
    padding: 0 !important;
    margin: 0 !important;
    display: flex;
    justify-content: center;
    align-items: center;
}
.shareCanvas{
    position: fixed;
    left: 0;
    top: -2000px;
}
