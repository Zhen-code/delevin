.container-main {
    width:100%;
    padding: 32rpx;
    box-sizing: border-box;
    height: auto;
}

.point-img {
    width:100%;height:auto;
}
.bjt {
    width:686rpx;
    height:1066rpx;
}

.point-container {
    padding:32rpx;
    box-sizing:border-box;
    width: 686rpx;
    height: 242rpx;
    display: flex;
    justify-content: space-between;
    }

.point-container text {font-weight:bold;}
.point-container .am-cname {
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
}
.contact{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.contact image{
    width: 36rpx;
    height: 36rpx;
}
.contact text{
    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
}
.desc{
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #999999;
}
