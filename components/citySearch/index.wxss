/* components/citySearch/index.wxss */
.top {
	width: 100%;
	height: auto;
	padding: 10rpx 32rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.top-left {
	width: auto;
	height: 32rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
	margin-right: 24rpx;
}

.top-left-title {
	font-size: 30rpx;
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
	margin-right: 10rpx;
}

.top-left-border {
	height: 0;
	border-left: 8rpx solid transparent;
	border-right: 8rpx solid transparent;
	border-top: 8rpx solid #475669;
}

.top-right {
	flex: 1;
	height: 68rpx;
	border-radius: 34rpx;
	background-color: #F8F8F8;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
}

.top-right-image {
	width: 50rpx;
	height: 50rpx;
	display: block;
	margin: 0 8rpx 0 20rpx
}

.top-right-text {
	flex: 1;
	padding-right: 20rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: #333333
}