/* components/doubleTab/index.wxss */
.tab {
	width: 130px;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.tabState {
	width: 50%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 28rpx;
	color: #999999;
}

.tabAction {
	position: relative;
	color: #333333;
	font-weight: bold;
}

.tabAction::before {
	content: "";
	width: 10px;
	height: 3px;
	background: rgba(255, 210, 0, 1);
	border-radius: 2px;
	position: absolute;
	bottom: -8rpx;
	left: 50%;
	transform: translate(-50%, -50%);
}