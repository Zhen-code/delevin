.nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  color: #fff;
	z-index: 10;
}

.nav-main {
  width: 100%;
  height: 100%;
  position: relative;
}

.nav .capsule-box {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav .capsule-box .nav-title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
	color: #333333;
}

.back {
	width: 48rpx;
	height: 48rpx;
	display: flex;
	align-items: center;
	justify-content: center;
  position: absolute;
	left: 48rpx;
	z-index: 99999999;
}

.back image {
	width: 100%;
	height: 100%;
}

.back2{
	width: 168rpx;
	height: 64rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	position: fixed;
	left: 20rpx;
	z-index: 99999;
	background-color: rgba(252,252,252,0.5);
	border-radius: 40rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
	border: 1rpx solid rgba(0,0,0,0.1);
}

.back2-image{
	width: 48rpx;
	height: 48rpx;
} 

.back2-text{
	width: 2rpx;
  height: 36rpx;
  margin:0 18rpx;
	background-color: rgba(0,0,0,0.1);
} 