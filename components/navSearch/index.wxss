/* component/navSearch/index.wxss */
.custom_nav {
  width: 100%;
  position: relative;
  z-index: 99999;
}
.custom_nav_box {
  position: fixed;
  width: 100%;
  z-index: 99999;
}
.search-box {
  padding: 0 24rpx 0 0;
  display: flex;
  position: relative;
  z-index: 9;
}

.search-box .cancel {
  padding: 6px 0 6px 22rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.view-search-row {
  box-sizing: border-box;
  padding: 8px 0 7px 0;
  /* flex: 1; */
  margin-left: 32rpx;
  width: 426rpx;
  height: 35px;
  background: rgba(248, 248, 248, 1);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-search-row-icon {
  width: 44rpx;
  height: 44rpx;
  margin: 7px 16rpx 6px 24rpx;
}

.view-search-row-text {
  flex: 1;
  height: 100%;
  width: 320rpx;
  overflow: hidden;
  /* display: flex; */
  align-items: center;
  font-size: 28rpx;
  color: #999999;
}