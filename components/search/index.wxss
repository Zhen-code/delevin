/* component/search/index.wxss */
.search-box {
  padding: 0 24rpx;
  display: flex;
  margin-top: 10rpx;
}

.search-box .cancel {
  padding: 8px 0 7px 22rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.view-search-row {
  box-sizing: border-box;
  flex: 1;
  width: 100%;
  height: 35px;
  background: rgba(248, 248, 248, 1);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-search-row-icon {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 8rpx 0 20rpx;
}

.view-search-row-text {
  flex: 1;
  /* height: 100%; */
  width: 100%;
  overflow: hidden;
  /* display: flex; */
  align-items: center;
  font-size: 28rpx;
  color: #333333;
  padding-right: 20rpx;
}