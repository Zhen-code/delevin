@import '../common/index.wxss';

.van-swipe-cell {
	position: relative;
	overflow: hidden
}

.van-swipe-cell__left,
.van-swipe-cell__right {
	position: absolute;
	top: 0;
	height: 100%
}

.van-swipe-cell__left {
	left: 0;
	-webkit-transform: translate3d(-100%, 0, 0);
	transform: translate3d(-100%, 0, 0)
}

.van-swipe-cell__right {
	right: 0;
	-webkit-transform: translate3d(100%, 0, 0);
	transform: translate3d(100%, 0, 0);
	width: 160rpx;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #F64D4D;
	font-size: 28rpx;
	font-weight: 400;
	color: #FFFFFF;
}