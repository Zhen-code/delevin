/* pages/personal/mine/index.wxss */
.mine {
	width: 100%;
	height: 100%;
	background: rgba(248, 248, 248, 1);
}

.mine-content {
	width: 100%;
	height: 100vh;
	padding-top: 88px;
	background-size: 100% 360rpx;
	background-repeat: no-repeat;
	background-image: url('http://beiru.oss-cn-hangzhou.aliyuncs.com/admin-file/4a6bf93c-304e-4d41-aea5-9227588aa3b5.png');
}

.mine-content-top {
	width: 686rpx;
	height: auto;
	padding: 0 40rpx;
	margin: 28rpx 32rpx 56rpx 32rpx;
	background: rgba(255, 255, 255, 1);
	border-radius: 4px;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}

.mine-content-top-box {
	width: 100%;
	height: 148rpx;
	margin-top: 20rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-direction: row;
}

.mine-content-top-left,
.mine-content-top-rigth {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.mine-content-top-rigth-image{
	width: 64rpx;
	height: 64rpx;
	display: block;
}

.mine-content-top-left-title {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: column;
}

.mine-content-top-left-text {
	font-size: 40rpx;
	font-weight: bold;
	margin-left: 24rpx;
	color: rgba(51, 51, 51, 1)
}

.mine-content-top-rigth-text {
	font-size: 26rpx;
	font-weight: 400;
	color: rgba(64, 119, 255, 1);
}

.mine-content-top-left-type {
	font-size: 30rpx;
	font-weight: 400;
	margin-left: 24rpx;
	color: rgba(102, 102, 102, 1);
}

.introductionText {
	width: 100%;
	height: auto;
	margin: 20rpx 0 40rpx 0;
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
}

.mine-content-row {
	width: 750rpx;
	height: 120rpx;
	padding: 0 32rpx;
	background-color: white;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.mine-content-row-left {
	width: 45rpx;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right: 24rpx;
}

.mine-content-row-left-icon{
	width: 45rpx;
	height: 45rpx;
}

.mine-content-row-right {
	flex: 1;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-direction: row;
	font-size: 32rpx;
	font-weight: 400;
	color: rgba(51, 51, 51, 1);
	border-bottom: 1rpx solid #eeeeee;
}

.mine-content-bottom {
	width: 100%;
	height: auto;
	font-size: 30rpx;
	font-weight: 400;
	margin-top: 72rpx;
	text-align: center;
	color: rgba(64, 119, 255, 1);
}