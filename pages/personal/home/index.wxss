/* pages/personal/home/index.wxss */
.view {
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}

.content {
	width: 100%;
	min-height: 100vh;
	max-height: 100%;
	padding-bottom: 100rpx;
	background-size: 100% 360rpx;
	background-repeat: no-repeat;
	background-image: url('http://beiru.oss-cn-hangzhou.aliyuncs.com/admin-file/701b7e0d-9e0b-4b73-b615-9f2b6beb19fc.png');
}

.top {
	width: 100%;
	height: auto;
	padding: 10rpx 32rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.top-left {
	width: auto;
	height: 32rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
	margin-right: 24rpx;
}

.top-left-title {
	font-size: 30rpx;
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
	margin-right: 10rpx;
}

.top-left-border {
	height: 0;
	border-left: 8rpx solid transparent;
	border-right: 8rpx solid transparent;
	border-top: 8rpx solid #475669;
}

.top-right {
	flex: 1;
	height: 68rpx;
	border-radius: 34rpx;
	background-color: #ffffff;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
}

.top-right-image {
	width: 50rpx;
	height: 50rpx;
	display: block;
	margin: 0 8rpx 0 20rpx
}

.top-right-text {
	flex: 1;
	padding-right: 20rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: #999999
}

.view-swiper {
	width: 100%;
	height: 320rpx;
	padding: 0 32rpx;
	box-sizing: border-box;
	border-radius: 8rpx;
	overflow: hidden;
	margin-top: 16rpx;
}

.swiper-item {
	width: 100%;
	height: 100%;
	border-radius: 8rpx;
	background-color: #409EFF;
}

.components {
	width: 100%;
	height: auto;
	padding: 0 32rpx;
	box-sizing: border-box;
}

.components-top {
	width: 100%;
	height: 44rpx;
	margin-top: 40rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-direction: row;
}

.components-top-left {
	width: auto;
	height: 100%;
	font-size: 32rpx;
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
}

.houseType {
	width: 100%;
	height: auto;
	margin-top: 24rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
}

.houseType-item {
	width: 20%;
	height: auto;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}

.houseType-item-name {
	font-size: 26rpx;
	font-weight: 400;
	margin-top: 8rpx;
	color: rgba(51, 51, 51, 1);
}

.owner {
	width: 100%;
	height: 152rpx;
	margin-top: 24rpx;
	background-position: center center;
	background-size: 100% 100%;
	background-repeat: no-repeat;
	background-image: url('http://beiru.oss-cn-hangzhou.aliyuncs.com/admin-file/16946559-db73-42a9-9d80-f7f5b78256a5.png');
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: row;
}

.owner-left {
	width: 50%;
	padding-left: 48rpx;
	box-sizing: border-box;
	height: 100%;
	display: flex;
	align-items: flex-start;
	justify-content: center;
	flex-direction: column;
}

.owner-left-title1 {
	font-size: 34rpx;
	font-weight: bold;
	color: rgba(51, 51, 51, 1);
}

.owner-left-title2 {
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(102, 102, 102, 1);
}

.owner-rigth {
	width: 50%;
	height: 100%;
	padding-right: 48rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.owner-rigth-image {
	width: 192rpx;
	height: 82rpx;
}

.home-message {
	width: 100%;
	height: auto;
	margin: 34rpx 0;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
	background: #F8F8F8;
}

.home-message-image {
	width: 62rpx;
	height: 24rpx;
	margin-left: 24rpx;
}

.home-message-text {
	flex: 1;
	height: 40px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.swiperTitle {
	width: 100%;
	height: 20px;
	display: flex;
	align-items: center;
	justify-content: center;
}

.swiperTitle swiper-item {
	width: 100%;
	height: 100%;
	line-height: 20px;
	padding: 0 24rpx;
	box-sizing: border-box;
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(102, 102, 102, 1);
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	word-break: break-all;
}

.border {
	border-bottom: 20rpx solid #F8F8F8
}

.home-bottom {
	width: 100%;
	height: 88rpx;
	background: rgba(248, 248, 248, 1);
}

.home-bottom text {
	flex: 1;
	height: 100%;
	font-size: 26rpx;
	font-weight: 400;
	color: rgba(153, 153, 153, 1);
	text-align: center;
	line-height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}